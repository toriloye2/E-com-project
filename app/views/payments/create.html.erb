<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Order placed successfully!</h1>
      <p class="lead text-muted">Thanks, Your Total amount paid is <%= @amount %>.</p>
      <div class="text-left">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Product Name</th>
              <th scope="col">Cost Price</th>
              <!-- Add more column headings as needed -->
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td><%= product.name %></td>
                <td><%= product.price %></td>
                <!-- Add more columns with product details as needed -->
              </tr>
            <% end %>
            <tr>
              <td colspan="2" class="text-right">Total Amount Paid</td>
              <td><%= @amount %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
